{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Room Types",
  "description": "Describes types of rooms at the school",
  "type": "array",
  "items": {
    "type": "object",
    "description": "Provides details on graphically or textually describing a room",
    "required": ["icon"],
    "additionalProperties": false,
    "properties": {
      "icon": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "class": {
            "type": "string",
            "description": "The type of icon to display",
            "enum": ["ionicon", "material"]
          }
        },
        "patternProperties": {
          "android|ios": {
            "type": "object",
            "description": "Describes the icon to display on Android/iOS devices",
            "required": ["name", "class"],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string"
              },
              "class": {
                "type": "string",
                "description": "The type of icon to display",
                "enum": ["ionicon", "material"]
              }
            }
          }
        }
      }
    },
    "patternProperties": {
      "^name(_[a-z]+)?$": {
        "type": "string",
        "description": "Name of the room. Add the locale modifier for names in different languages"
      }
    }
  }
}
