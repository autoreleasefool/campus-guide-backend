{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Bus Stop Departure Times",
  "description": "Details about bus stops near the University campus",
  "type": "array",
  "items": {
    "type": "object",
    "description": "Details about the bus stops near a campus",
    "required": ["id", "lat", "long", "stops"],
    "additionalProperties": false,
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the campus"
      },
      "lat": {
        "type": "number",
        "description": "Latitude of the location of the campus"
      },
      "long": {
        "type": "number",
        "description": "Longitude of the location of the campus"
      },
      "stops": {
        "type": "array",
        "description": "List of bus stops near the campus",
        "items": {
          "type": "object",
          "description": "Details about a bus stop, including location and routes which service it",
          "required": ["code", "id", "lat", "long", "routes"],
          "additionalProperties": false,
          "properties": {
            "code": {
              "type": "string",
              "description": "User-facing id for the stop",
              "pattern": "^[0-9]+$"
            },
            "id": {
              "type": "string",
              "description": "Unique id for each stop"
            },
            "lat": {
              "type": "number",
              "description": "Latitude of the location of the stop"
            },
            "long": {
              "type": "number",
              "description": "Longitude of the location of the stop"
            },
            "routes": {
              "type": "array",
              "description": "Routes that service the stop",
              "items": {
                "type": "number",
                "description": "Numbers of a route",
                "minimum": 1
              }
            }
          },
          "patternProperties": {
            "^name(_[a-z]+)?$": {
              "type": "string",
              "description": "Name of the stop. Add the locale modifier for names in different languages"
            }
          }
        }
      }
    },
    "patternProperties": {
      "^name(_[a-z]+)?$": {
        "type": "string",
        "description": "Name of the campus. Add the locale modifier for names in different languages"
      }
    }
  }
}