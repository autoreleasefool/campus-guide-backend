{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Settings",
  "description": "Settings that the user can control",
  "type": "object",
  "patternProperties": {
    ".+": {
      "type": "array",
      "description": "Groups which settings belong to",
      "items": {
        "type": "object",
        "description": "A setting for the user to manipulate",
        "required": ["key", "type"],
        "additionalProperties": false,
        "properties": {
          "key": {
            "type": "string",
            "description": "Unique identifier for the setting",
            "pattern": "^(pref|app)_[a-z_]+$"
          },
          "type": {
            "type": "string",
            "description": "The type of setting",
            "pattern": "^boolean|multi|text|link$"
          },
          "icon": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string"
              },
              "class": {
                "type": "string",
                "description": "The type of icon to display",
                "enum": ["ionicon", "material"]
              }
            },
            "patternProperties": {
              "android|ios": {
                "type": "object",
                "description": "Describes the icon to display on Android/iOS devices",
                "required": ["name", "class"],
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "class": {
                    "type": "string",
                    "description": "The type of icon to display",
                    "enum": ["ionicon", "material"]
                  }
                }
              }
            }
          }
        },
        "patternProperties": {
          "^name(_[a-z]+)?$": {
            "type": "string",
            "description": "Name of the setting. Add the locale modifier for names in different languages"
          },
          "^link(_[a-z]+)?$": {
            "type": "string",
            "description": "URL of the setting. Add the locale modifier for URLs in different languages"
          }
        }
      }
    }
  }
}
